<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccountActivity.AddUserInfoActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_camera_for_your_profile_image"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:padding="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/buttonImageAddUserInfo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:src="@drawable/camera_icon"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"/>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressbarAddUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputDisplayNameAddUserInfo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:hint="Masukkan Display Name" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/buttonSaveAddUserInfo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:background="@xml/button_shape"
        android:padding="8dp"
        android:text="@string/submit_info"
        android:textStyle="bold" />

</LinearLayout>