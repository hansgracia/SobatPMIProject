<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/buttonImageAddCusDialDonorDarah"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:background="@drawable/camera_icon"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp" >

        <EditText
            android:id="@+id/inputPenerimaCusDialDonorDarah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama pihak penerima/butuh donor darah"
            android:background="@xml/edittext_style"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:singleLine="true"
            android:textSize="16sp"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/inputDescCusDialDonorDarah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@xml/edittext_style"
            android:hint="Masukkan deskripsi donor darah"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/black"
                android:text="Golongan Darah"
                android:textSize="16sp"/>

            <Spinner
                android:id="@+id/spinnerGolCusDialDonorDarah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:entries="@array/golongan_darah" />

            <EditText
                android:id="@+id/inputJumlahCusDialDonorDarah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginLeft="15dp"
                android:inputType="number"
                android:hint="Jumlah" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>