<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/buttonCusDialDonorDarah"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp" >

        <EditText
            android:id="@+id/inputPenerimaCusDialDonorDarah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama pihak penerima/butuh donor darah"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/inputDescCusDialDonorDarah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan deskripsi donor darah"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:text="Golongan Darah"
                android:textSize="12sp"/>

            <Spinner
                android:id="@+id/spinnerGolCusDialDonorDarah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="12sp"
                android:entries="@array/golongan_darah" />

            <EditText
                android:id="@+id/inputJumlahCusDialDonorDarah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="12sp"
                android:inputType="number"
                android:hint="Jumlah" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>