<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rowImDonorDarah"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@id/rowImDonorDarah"
                android:layout_alignStart="@id/rowImDonorDarah">

                <TextView
                    android:id="@+id/rowPenerimaDonorDarah"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Ini adalah Penerima Donor Darah"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/rowDescDonorDarah"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Ini adalah Keterangan Butuh Donor Darah"
                    android:textSize="12sp"
                    android:textStyle="italic"/>


            </LinearLayout>

            <TextView
                android:id="@+id/rowOptionRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_gravity="center_vertical"
                android:text=":"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

   </android.support.v7.widget.CardView>

</RelativeLayout>